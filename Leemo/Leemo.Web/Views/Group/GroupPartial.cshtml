@model List<XLMS.Model.Group>

    <div class="general-setting card-style big-space groups-tab">
        <div class="row">
            <div class="col-md-5 users-list">
                <div class="check-user-status">
                    <div class="active-users">
                        <select class="form-control form-style-1 bg-transparent light-color">
                            <option>Select Group</option>
                            <option>Active Usrs 100</option>
                        </select>
                        <a href="javascript:void(0);" class="btn-primary btn-sm-style" @*data-toggle="modal" data-target="#newGroup"*@ onclick="NewGroupPopup()"><img src="~/images/plus.svg" title="plus"> New Group</a>
                    </div>
                    <div class="search-users">
                        <input type="text" placeholder="Search Users" class="form-control form-style-1 bg-transparent">
                        <span class="search-icon">
                            <img src="~/images/search-icon.png">
                        </span>
                    </div>
                    <div class="select-users" id="groupList">
                        <ul id="ulList">
                            @*@foreach (var group in ViewBag.Groups)*@
                            @if (Model != null)
                            {
                                @foreach (var group in Model)
                                {
                                    <li>
                                        <div class="checkbox-style-1">
                                            <input class="form-check-input" type="radio" name="radio1" value="" id="radio1" onclick="UserDetails('@group.Id')">
                                            <label class="form-check-label" for="radio1">
                                                <span class="users-img">
                                                    <img src="~/images/b.png" alt="Business Development" title="Business Development" />
                                                    <!-- <span class="active"></span> -->
                                                </span>
                                                <span class="name">@group.Name</span>
                                            </label>
                                        </div>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-7 user-info">
                <div class="profile-view">
                    <div class="profile-area">
                        <span class="pro-img" data-toggle="modal" data-target="#groupprofileModal">
                            <img src="~/images/BDM.png" alt="BDM" title="BDM">
                        </span>
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#groupuploadproModal">Change</a>
                    </div>
                    <div class="pro-info">
                        <h5>
