                <div class="info-content">@(Convert.ToString(Model.ResultUser.UserProfile.DateOfBirth.Date) != Convert.ToString(default(DateTime).Date) ? Model.ResultUser.UserProfile.DateOfBirth.ToShortDateString() : "")</div>
