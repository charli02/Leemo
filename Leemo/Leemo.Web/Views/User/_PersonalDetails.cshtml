            <div class="col-auto"><span class="spacer">:</span></div>
            <div class="col info-content-area info-pl">
                @if (Model.ResultUser.UserProfile != null)
                {
                    <div class="info-content">@Model.ResultUser.UserProfile.Fax</div>
                }
            </div>
        </div>
    </div>
