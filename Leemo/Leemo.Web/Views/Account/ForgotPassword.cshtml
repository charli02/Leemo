@model Leemo.Model.InputModels.InputForgetPassword
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutPlain.cshtml";
}

<div class="forgot-form form-sec card-style form-space">
    <h2 class="info-heading">You will receive instructions for reseting your password</h2>
    <form class="needs-validation" id="forgotPassForm">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="info-label">Fill in Your Registered Email Address</label>
            <input type="text" class="form-control form-style-1" asp-for="Email" placeholder="example@gmail.com">
            <span asp-validation-for="Email" class="text-danger" />
            <div class="invalid-feedback">
                Email Required
            </div>
        </div>
        <div class="text-right pt-3">
            <button type="submit" class="btn-primary btn-sm-style" onclick="forgotPassword(this)">Send</button>
        </div>
        <div class="forgot-link"><a href="/Account/Login">Back to login</a></div>

    </form>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src=@Url.Content("~/js/area/user.js")></script>
    <script src=@Url.Content("~/js/common.js")></script>
}
